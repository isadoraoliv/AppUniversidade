<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.samaravile.universidade.tela10">

    <LinearLayout
        android:layout_width="347dp"
        android:layout_height="484dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteY="13dp"
        tools:layout_editor_absoluteX="19dp">

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            app:srcCompat="@mipmap/uit"
            tools:layout_editor_absoluteX="169dp"
            tools:layout_editor_absoluteY="18dp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5º Período"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold"
            tools:layout_editor_absoluteX="162dp"
            tools:layout_editor_absoluteY="94dp" />

        <CheckBox
            android:id="@+id/poo2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Programação Orientada à Objetos  II"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="171dp" />

        <CheckBox
            android:id="@+id/redes2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Redes II"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="263dp" />

        <CheckBox
            android:id="@+id/labredes2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laboratório de Redes II"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="304dp" />

        <CheckBox
            android:id="@+id/engenharia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Engenharia de Software"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="348dp" />

        <CheckBox
            android:id="@+id/so"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sistemas Operacionais"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="129dp" />

        <CheckBox
            android:id="@+id/labso"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Laboratório de Sistemas Operacionais"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="216dp" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
